@model web_renderizacao_server_side.Models.Paginacao<Aluno>

@{
    ViewData["Title"] = "Lista de alunos";
}

<h1>Lista de alunos</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Aluno</a>
</p>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <table class="table table-striped table-advance table-hover">
        <tbody>
          <tr>
            <th><i class="icon_profile"></i> Id</th>
            <th><i class="icon_calendar"></i> Nome</th>
            <th><i class="icon_mail_alt"></i> Matricula</th>
            <th><i class="icon_mail_alt"></i> Notas</th>
            <th><i class="icon_cogs"></i> Ações</th>
          </tr>
          @foreach (var aluno in Model.Results) {
          <tr>
            <td>@aluno.Id</td>
            <td>@aluno.Nome</td>
            <td>@aluno.Matricula</td>
            <td>@aluno.Notas</td>
            <td>
              <div class="btn-group">
                <a class="btn btn-success"asp-action="Details" asp-route-id="@aluno.Id"><i class="icon_check_alt2"></i></a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@aluno.Id"><i class="icon_plus_alt2"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@aluno.Id"><i class="icon_close_alt2"></i></a>
              </div>
            </td>
          </tr>
          }
        </tbody>
      </table>

      <hr>
      
      @if(Model.CurrentPage > 1){
        <a href="/Alunos?pagina=@(Model.CurrentPage - 1)">Anterior</a>
      }

      @if(Model.PageCount > Model.CurrentPage && Model.PageSize == Model.Results.Count){
        <a href="/Alunos?pagina=@(Model.CurrentPage + 1)">Próxima</a>
      }
    </section>
  </div>
</div>
